<% layout('layouts/boilerplate.ejs') -%>
<body>
  <div class="container py-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h3 class="mb-4 text-center">Edit Your Listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
          <!-- Title Field -->
          <div class="mb-3">
            <label for="title" class="form-label"><strong>Title:</strong></label>
            <input 
              name="listing[title]" 
              value="<%= listing.title %>" 
              type="text" 
              class="form-control" 
              id="title" 
              required 
            />
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please provide a title.
            </div>
          </div>

          <!-- Description Field -->
          <div class="mb-3">
            <label for="description" class="form-label"><strong>Description:</strong></label>
            <textarea 
              name="listing[description]" 
              class="form-control" 
              id="description" 
              rows="4" 
              required
            ><%= listing.description %></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please provide a description.
            </div>
          </div>
          <div class="col">
            <div class="mb-3 card h-100 card-listing">
              Original Listing Image <br>
              <img class="card-img-top" src="<%= originalImageUrl %>">
            </div>
          </div>
          <!-- Image Field -->
          <div class="mb-3">
            <label for="image" class="form-label"><strong>Image URL:</strong></label>
            <input 
              name="listing[image]"  
              type="file" 
              class="form-control" 
              id="image" 
            />
          </div>

          <!-- Price Field -->
          <div class="mb-3">
            <label for="price" class="form-label"><strong>Price (in USD):</strong></label>
            <input 
              name="listing[price]" 
              value="<%= listing.price %>" 
              type="number" 
              step="0.01" 
              class="form-control" 
              id="price" 
              required 
            />
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please provide a Price.
            </div>
          </div>

          <!-- Location Section -->
          <div class="row">
            <!-- Country Field -->
            <div class="mb-3 col-md-4">
              <label for="country" class="form-label"><strong>Country:</strong></label>
              <input 
                name="listing[country]" 
                value="<%= listing.country %>" 
                type="text" 
                class="form-control" 
                id="country" 
                required 
              />
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please provide a valid country.
              </div>
            </div>

            <!-- Location Field -->
            <div class="mb-3 col-md-8">
              <label for="location" class="form-label"><strong>Location:</strong></label>
              <input 
                name="listing[location]" 
                value="<%= listing.location %>" 
                type="text" 
                class="form-control" 
                id="location" 
                required 
              />
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please provide a valid location.
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button type="submit" class="btn btn-dark px-5 edit-btn">Edit Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>